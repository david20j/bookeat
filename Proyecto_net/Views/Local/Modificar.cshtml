@model Proyecto_net.Models.Local

@{
    ViewData["Title"] = "Modificar local";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Modificar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Idlocal" />
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control input-modal" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Correo" class="control-label"></label>
                <input asp-for="Correo" class="form-control input-modal" />
                <span asp-validation-for="Correo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="Pw" class="form-control input-modal" />
                <span asp-validation-for="Pw" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Horario" class="control-label"></label>
                <input asp-for="Horario" class="form-control input-modal" />
                <span asp-validation-for="Horario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control input-modal" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CPostal" class="control-label"></label>
                <input asp-for="CPostal" class="form-control input-modal" />
                <span asp-validation-for="CPostal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control input-modal" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-modal" />
            </div>
        </form>
    </div>
</div>

@if (ViewBag.menu != null)
{
    <label for="exampleInputPassword1">Menú</label>
    foreach (var a in ViewBag.menu)
    {
        <div class="form-group" id="menues">
            <input type="text" class="form-control" id="exampleInputPassword1" value=@a.Nombre>
            <input type="text" class="form-control" id="exampleInputPassword1" value=@Math.Round(@a.Precio, 2)>
        </div>
    }
}

<div class="form-group" id="anadirMenu">
    <input type="text" class="form-control" id="nombre" placeholder="Nombre del menú">
    <input type="text" class="form-control" id="precio" placeholder="Precio">
    <button id="crearMenuBtn" class="btn btn-primary">Crear Menu</button>
</div>

<div class="form-group" id="anadirMesa">
    <input type="text" class="form-control" id="numeroMesa" placeholder="Número de la mesa">
    <input type="text" class="form-control" id="capacidad" placeholder="Capacidad de la mesa">
    <button id="crearMesaBtn" class="btn btn-primary">Crear Mesa</button>
</div>


@section scripts {
    <script type="text/javascript">
        $(document).on("click", "#crearMenuBtn", function () {
            $.ajax({
                type: "GET",
                url: "/Local/crearMenu/",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: {
                    nombre: $("#nombre").val(),
                    precio: $("#precio").val()
                },
                success: function (result, status, xhr) {
