                    }
                }
            })

        });

        $(document).on("click", "#crearMesaBtn", function () {
            $.ajax({
                type: "GET",
                url: "/Local/crearMesa/",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                data: {
                    numeroMesa: $("#numeroMesa").val(),
                    capacidad: $("#capacidad").val()
                },
                success: function (result, status, xhr) {
                    if (result == true) {
                        alert("true")
